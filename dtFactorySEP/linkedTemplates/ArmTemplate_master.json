{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "dtFactorySEP"
		},
		"wwiStandard_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'wwiStandard'"
		},
		"wwiODSadf_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'wwiODSadf'"
		},
		"PurchaseDWadf_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'PurchaseDWadf'"
		},
		"PurchaseODS_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'PurchaseODS'"
		},
		"PurchaseDW_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'PurchaseDW'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "dtFactorySEP_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"wwiStandard_connectionString": {
						"value": "[parameters('wwiStandard_connectionString')]"
					},
					"wwiODSadf_connectionString": {
						"value": "[parameters('wwiODSadf_connectionString')]"
					},
					"PurchaseDWadf_connectionString": {
						"value": "[parameters('PurchaseDWadf_connectionString')]"
					},
					"PurchaseODS_connectionString": {
						"value": "[parameters('PurchaseODS_connectionString')]"
					},
					"PurchaseDW_connectionString": {
						"value": "[parameters('PurchaseDW_connectionString')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "dtFactorySEP_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'dtFactorySEP_ArmTemplate_0')]"
			]
		}
	]
}